<% if @results.length !=0 %>
  
  <% @results.each do |tweet| %>
  <%= link_to(tweet_path(tweet.id), class: 'tweet-img') do %>
  <%= image_tag tweet.image.variant(resize: '500x500'), class: "tweet-img" %>
  <% end %>
  <% end %>
<% else %>
  該当する投稿はありません
<% end %>
